{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "stores": ["./stores"],
      "stores/*": ["./stores/*"],
      "hooks/*": ["./hooks/*"],
      "models": ["./models/index"],
      "models/*": ["./models/*"],
      "components/*": ["./components/*"],
      "shared/*": ["./shared/*"],
    }
  },
  "include": [
    "**/*.ts", "**/*.tsx"
  ],
  "exclude": [
    "node_modules", 
  ]
}
